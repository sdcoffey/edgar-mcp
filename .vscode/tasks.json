{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run RSpec - Current File",
      "type": "shell",
      "command": "/Users/steve/.local/share/mise/shims/bundle",
      "args": ["exec", "rspec", "${file}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run RSpec - Current Line",
      "type": "shell",
      "command": "/Users/steve/.local/share/mise/shims/bundle",
      "args": ["exec", "rspec", "${file}:${lineNumber}"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "Run All RSpec Tests",
      "type": "shell",
      "command": "/Users/steve/.local/share/mise/shims/bundle",
      "args": ["exec", "rspec"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    }
  ]
}
